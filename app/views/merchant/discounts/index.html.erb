<h1><%= @merchant.name %> Discounts</h1>

<% @merchant.discounts.each do |discount| %>
  <section id= "discount-<%= discount.id %>">
    <h4><%= link_to "Discount #{discount.id}:", merchant_discount_path(discount)%></h4>
      <p> Get <%= number_to_percentage(discount.rate, precision: 1)%> off when you purchase <%= discount.quantity %> or more items</p>
      <%= link_to "Edit Discount", edit_merchant_discount_path(discount) %>
      <%= link_to "Delete Discount", merchant_discount_path(discount), method: :delete, data: {confirm: "Please confirm you would to delete this discount"} %>
  </section>
<% end %>
<br><br><br>
<%= link_to "New Discount", new_merchant_discount_path %>
